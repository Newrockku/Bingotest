<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bingo Live Board</title>
    <style>
        body { font-family: sans-serif; background: #f4f4f9; text-align: center; padding: 20px; }
        h1 { color: #333; }
        .grid { 
            display: grid; 
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); 
            gap: 15px; max-width: 800px; margin: 0 auto; 
        }
        .tile { 
            background: white; border: 2px solid #ddd; border-radius: 8px; 
            padding: 20px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }
        .tile.complete { background: #d4edda; border-color: #28a745; color: #155724; }
        .points { display: block; font-size: 0.8em; font-weight: bold; margin-top: 10px; color: #666; }
    </style>
</head>
<body>

    <h1>üèÜ Bingo Game Board</h1>
    <div id="board" class="grid">Loading tiles...</div>

    <script>
        // REPLACE THE URL BELOW WITH YOUR PUBLISHED CSV URL
        const SHEET_URL = 'YOUR_CSV_URL_HERE';

        async function loadBingo() {
            const response = await fetch(SHEET_URL);
            const data = await response.text();
            const rows = data.split('\n').slice(1); // Skip header row
            
            const board = document.getElementById('board');
            board.innerHTML = ''; // Clear loading text

            rows.forEach(row => {
                const cols = row.split(',');
                if (cols.length < 2) return;

                const name = cols[0];
                const points = cols[1];
                const status = cols[2]?.trim().toLowerCase(); // Optional "Status" column

                const tile = document.createElement('div');
                tile.className = 'tile' + (status === 'done' ? ' complete' : '');
                tile.innerHTML = `
                    <strong>${name}</strong>
                    <span class="points">${points} PTS</span>
                `;
                board.appendChild(tile);
            });
        }

        loadBingo();
    </script>
</body>
